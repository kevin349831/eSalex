
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div> 
        <div>訂單編號</div>
        <div>@Html.TextBox("txtOrderId")</div>

        @*@Html.DropDownList("custData", (List<SelectListItem>)ViewBag.custData)*@
        
